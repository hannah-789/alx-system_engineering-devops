#!/bin/bash

# Check if Nginx is listening on port 80
if sudo netstat -tuln | grep ':80'; then
    echo "Nginx is already listening on port 80."
else
    # Modify Nginx configuration to listen on port 80
    sudo sed -i 's/listen 8080 default_server;/listen 80 default_server;/g' /etc/nginx/sites-enabled/default
    
    # Restart Nginx to apply changes
    sudo service nginx restart
    echo "Nginx has been configured to listen on port 80."
fi

